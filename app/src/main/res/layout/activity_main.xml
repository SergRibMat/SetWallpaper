<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="190dp"
            android:layout_height="219dp"
            android:src="@color/colorAccent"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/show_picture_imageview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resolution_tv"
            app:layout_constraintTop_toBottomOf="@+id/show_picture_imageview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#000000"
            android:textSize="36sp"/>
    <Button
            android:text="Set Wallpaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/set_wallapaper_btn"
            app:layout_constraintBottom_toTopOf="@+id/show_picture_imageview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.855"/>
    <Button app:layout_constraintEnd_toEndOf="parent"
            android:text="Select Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_image_btn"
            app:layout_constraintBottom_toTopOf="@+id/show_picture_imageview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.151"/>

</androidx.constraintlayout.widget.ConstraintLayout>
